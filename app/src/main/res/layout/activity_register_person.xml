<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Views.Activities.RegisterPerson">

    <EditText
        android:id="@+id/edtRegisPersonDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="5"
        android:hint="Documento"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/edtRegisPersonName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TituloRegisPerson" />

    <EditText
        android:id="@+id/edtRegisPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Nombre y Apellido"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtRegisPersonDocument"
        app:layout_constraintTop_toBottomOf="@+id/TituloRegisPerson" />

    <EditText
        android:id="@+id/edtRegisPersonAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="3"
        android:hint="Edad"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/edtRegisPersonEmail"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtRegisPersonDocument" />

    <EditText
        android:id="@+id/edtRegisPersonEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/edtRegisPersonTelephone"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtRegisPersonAge"
        app:layout_constraintTop_toTopOf="@+id/edtRegisPersonAge" />

    <EditText
        android:id="@+id/edtRegisPersonTelephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:hint="Telefono"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtRegisPersonEmail"
        app:layout_constraintTop_toTopOf="@+id/edtRegisPersonEmail" />

    <Button
        android:id="@+id/btnRegisPerson"
        android:backgroundTint="@color/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtRegisPersonEmail" />

    <TextView
        android:id="@+id/TituloRegisPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="cursive"
        android:text="Registro Persona"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>