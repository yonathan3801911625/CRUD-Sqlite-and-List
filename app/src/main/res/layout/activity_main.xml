<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Views.Activities.MainActivity">

    <ImageView
        android:id="@+id/imgVehiculosPrincipal"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/veh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTittleMain"
        app:srcCompat="@drawable/car" />

    <Button
        android:id="@+id/btnPersonasPrincipal"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/lightBlue"
        android:text="@string/per"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnVendedorPrincipal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPersonasPrincipal"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/btnVehiculosPrincipal"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/lightBlue"
        android:text="@string/veh"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVehiculosPrincipal" />

    <ImageView
        android:id="@+id/imgPersonasPrincipal"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/per"
        app:layout_constraintEnd_toStartOf="@+id/imgVendedorPrincipal"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVehiculosPrincipal"
        app:srcCompat="@drawable/employees" />

    <TextView
        android:id="@+id/txtTittleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="cursive"
        android:text="Sqlite and List "
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgVendedorPrincipal"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/ven"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgPersonasPrincipal"
        app:layout_constraintTop_toBottomOf="@+id/btnVehiculosPrincipal"
        app:srcCompat="@drawable/vendedor" />

    <Button
        android:id="@+id/btnVendedorPrincipal"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/lightBlue"
        android:contentDescription="@string/ven"
        android:text="@string/ven"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPersonasPrincipal"
        app:layout_constraintTop_toBottomOf="@+id/imgVendedorPrincipal" />
</androidx.constraintlayout.widget.ConstraintLayout>